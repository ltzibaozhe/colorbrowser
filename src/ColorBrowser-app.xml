<?xml version="1.0" encoding="UTF-8"?>
<application xmlns="http://ns.adobe.com/air/application/1.0">
	<id>com.levitation.ColorBrowser</id>
	<version>1.0</version>
    <filename>Color Browser</filename>
    
    <name>Color Browser</name>
    
    <description>A simple application used to store color sets from various sources.</description>
    
    <copyright>Copyright 2008 Levitation Design</copyright>


  <initialWindow>
    <content>!ApolloApplicationWizardPage.rootContentValue!</content>

    <systemChrome>standard</systemChrome>

    <transparent>false</transparent>

    <visible>false</visible>
  </initialWindow>

	<installFolder>colorbrowser</installFolder>

	<programMenuFolder>Color Browser</programMenuFolder>

	<icon>
        <image16x16>icons/Color-Browser16.png</image16x16>     
        <image32x32>icons/Color-Browser32.png</image32x32>   
        <image48x48>icons/Color-Browser48.png</image48x48>    
        <image128x128>icons/Color-Browser128.png</image128x128>
    </icon>

  <fileTypes>
      <fileType>
          <name>levitation.Color</name>
          <extension>color</extension>
          <description>Color Browser file</description>
          <contentType>binary/levitation.color</contentType>
            <icon>
		        <image16x16>icons/Color-Browser16.png</image16x16>     
		        <image32x32>icons/Color-Browser32.png</image32x32>   
		        <image48x48>icons/Color-Browser48.png</image48x48>    
		        <image128x128>icons/Color-Browser128.png</image128x128>
            </icon>
      </fileType>
  </fileTypes>
</application>
